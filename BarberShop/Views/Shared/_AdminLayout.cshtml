<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-377Y66G6FR"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());
        gtag('config', 'G-377Y66G6FR');
    </script>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BarberShop Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Scripts para Chart.js e jQuery UI -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="bg-dark border-right" id="sidebar-wrapper">
            <div class="sidebar-heading text-white text-center py-4">
                <h4>BarberShop Admin</h4>
            </div>
            <div class="list-group list-group-flush">
                <a href="@Url.Action("Index", "Admin")" class="list-group-item list-group-item-action bg-dark text-white my-2">
                    <i class="fas fa-chart-line"></i> Dashboards
                </a>
                <a href="@Url.Action("Index", "Barbeiro")" class="list-group-item list-group-item-action bg-dark text-white my-2">
                    <i class="fas fa-user-friends"></i> Barbeiros
                </a>
                <a href="@Url.Action("Index", "Servico")" class="list-group-item list-group-item-action bg-dark text-white my-2">
                    <i class="fas fa-cut"></i> Serviços
                </a> 
                <a href="@Url.Action("Index", "Pagamento")" class="list-group-item list-group-item-action bg-dark text-white my-2">
                    <i class="fas fa-credit-card"></i> Pagamentos
                </a>
                <a href="#" onclick="event.preventDefault(); document.getElementById('logout-form').submit();" class="list-group-item list-group-item-action bg-dark text-white my-2">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </a>
                <!-- Formulário oculto para o logout -->
                <form id="logout-form" action="@Url.Action("Logout", "Login")" method="post" style="display: none;">
                    @Html.AntiForgeryToken()
                </form>
            </div>
        </div>

        <div id="toastContainer" style="position: fixed; top: 20px; right: 20px; z-index: 9999;"></div>

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom">
                <button class="btn btn-primary" id="menu-toggle">
                    <i class="fas fa-bars"></i>
                </button>
                <h5 class="text-white ml-3">Bem-vindo ao Sistema de Barbearias</h5>
            </nav>

            <div class="container-fluid mt-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- Scripts adicionais -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        $(document).ready(function () {
            // Verifica se a tela é de um dispositivo móvel e esconde o menu lateral
            if (window.innerWidth < 768) {
                $("#wrapper").addClass("toggled");
            }

            // Toggle do menu lateral com animação suave
            $("#menu-toggle").click(function (e) {
                e.preventDefault();
                $("#wrapper").toggleClass("toggled");
            });

            // Reajusta o estado do menu ao redimensionar a janela
            $(window).resize(function () {
                if (window.innerWidth < 768) {
                    $("#wrapper").addClass("toggled");
                } else {
                    $("#wrapper").removeClass("toggled");
                }
            });
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
